<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
       <header>
          <h1>Admin Dashboard</h1>
       </header>
        <!--nav bar section-->
            <div class="menu-toggle">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        <nav>    
            <ul nav-list>
                <li><a href="#" data-content="createChallenge">Create Challenges</a></li>
                <li><a href="#"data-content="addAdmin">Add Admin</a></li>
                <li><a href="#" data-content="viewLogs">View Logs</a></li>
            </ul>
        </nav>
       <main>
        <!--add admin-->
        <div id="addAdmin" class="section">
            <h2>Add Admin</h2>
            <form id="addAdminForm">
                <label for="adminName">Name: </label>
                <input type="text" id="adminName" name="name">
                <label for="adminEmail">Email: </label>
                <input type="email" id="adminEmail" name="email">
                <label for="adminPassword">Password: </label>
                <input type="password" id="adminPassword" name="password">
                <button type="submit">Add Admin</button>
            </form>
        </div>
        <!-- Create Challenge -->
        <div id="createChallenge" class="section hidden">
           <h2>Create Challenge</h2>
            <form id="createChallengeForm">
                <label for="challengeTitle">Title:</label>
                <input type="text" id="challengeTitle" name="title" required>
                <label for="challengeDescription">Description:</label>
                <textarea id="challengeDescription" name="description" required></textarea>
                <label for="challengeStatus">Status:</label>
                <select id="challengeStatus" name="status">
                    <option value="active">Active</option>
                    <option value="archived">Archived</option>
                </select>
                <button type="submit">Create Challenge</button>
            </form>
        </div>

         <!-- View Logs -->
         <div id="viewLogs" class="section hidden">
            <h2>View Logs</h2>
            <div id="logsContainer">
                <!-- dynamically dispaly logs here-->
            </div>

        </div>      
       </main>

<script src="/js/script.js"></script>
</body>
</html>